    def show = {
        log.info "show - $params"
        def performanceInstance = Performance.get( params.id )

        if(!performanceInstance) {
            flash.error = "Performance not found with id ${params.id}"
            redirect(action:list)
        }
        else { return [ performanceInstance : performanceInstance ] }
    }

    def print = {
        log.info "print - $params"
        def performanceInstance = Performance.get( params.id )

        if(!performanceInstance) {
            flash.error = "Performance not found with id ${params.id}"
            redirect(action:list)
        }
        else { return [ performanceInstance : performanceInstance ] }
    }

    def delete = {
        log.info "delete - $params"
        def performanceInstance = Performance.get( params.id )
        if(performanceInstance) {
            try {
                performanceInstance.delete(flush:true)
                flash.message = "Performance ${params.id} deleted"
                redirect(action:list)
            }
            catch(org.springframework.dao.DataIntegrityViolationException e) {
                flash.error = "Performance ${params.id} could not be deleted"
                redirect(action:show,id:params.id)
            }
        }
        else {
            flash.error = "Performance not found with id ${params.id}"
            redirect(action:list)
        }
    }

    def edit = {
        log.info "edit - $params"
        GrailsDomainClass domainClass = grailsApplication.getArtefact("Domain", "Performance")
        DomainClassPropertyComparator comparator = new DomainClassPropertyComparator(domainClass)
        def excludedProps = ['version',
                             'id',
                             Events.ONLOAD_EVENT,
                             Events.BEFORE_DELETE_EVENT,
                             Events.BEFORE_INSERT_EVENT,
                             Events.BEFORE_UPDATE_EVENT]

        def props = domainClass.properties.findAll { !excludedProps.contains(it.name)}
        Collections.sort(props, comparator)
        def oneToManys = []
        def manyToOnes = []
        props.eachWithIndex { p,i ->
            if (p.oneToMany) {
                oneToManys.add(p)
            }
            else if (p.manyToOne || p.oneToOne) {
                manyToOnes.add(p)
            }
        }
        def performanceInstance = Performance.get( params.id )

        if(!performanceInstance) {
            flash.error = "Performance not found with id ${params.id}"
            redirect(action:list)
        }
        else {
            return [ performanceInstance : performanceInstance, 'oneToManys': oneToManys, 'manyToOnes': manyToOnes ]
        }
    }

    def update = {
        log.info "update - $params"
        GrailsDomainClass domainClass = grailsApplication.getArtefact("Domain", "Performance")
        def performanceInstance = Performance.get( params.id )
        if(performanceInstance) {
            if(params.version) {
                def version = params.version.toLong()
                if(performanceInstance.version > version) {
                    
                    performanceInstance.errors.rejectValue("version", "performance.optimistic.locking.failure", "Another user has updated this Performance while you were editing.")
                    render(view:'edit',model:[performanceInstance:performanceInstance])
                    return
                }
            }
            //performanceInstance.properties = fixedParams
            Scaffolding.setFromParams(domainClass,performanceInstance,params)
            if(!performanceInstance.hasErrors() && performanceInstance.save()) {
                flash.message = "Performance updated"
                redirect(action:'edit',id:performanceInstance.id)
            }
            else {
                render(view:'edit',model:[performanceInstance:performanceInstance])
            }
        }
        else {
            flash.error = "Performance not found with id ${params.id}"
            redirect(action:list)
        }
    }

    def create = {
        log.info "create - $params"
        log.info "create - referer: ${request.getHeader('referer')}"
        log.info "create - $flash"
        if (!request.getHeader('referer') ==~ /auth\/login/) {
            session.referer = request.getHeader('referer')
        }
        def performanceInstance = new Performance()
        if (flash.performanceInstance) {
            performanceInstance = flash.performanceInstance
            log.info "create - got from flash - ${performanceInstance.errors}"
        }
        else {
            performanceInstance.properties = params
        }
        return ['performanceInstance':performanceInstance]
    }

    def save = {
        log.info "save - $params"
        log.info "save - session.referer: ${session.referer}"
        log.info "save - $flash"
        GrailsDomainClass domainClass = grailsApplication.getArtefact("Domain", "Performance")
        def performanceInstance = new Performance()
        Scaffolding.setFromParams(domainClass,performanceInstance,params)
        if(performanceInstance.hasErrors()) {
            //render(view:'create',model:[performanceInstance:performanceInstance])
            flash.performanceInstance = performanceInstance
            log.info "save - updated - $flash"
            redirect(action:create)
            return
        }
        
        if(performanceInstance.save()) {
            flash.message = "Performance created"
            if (session.referer) {
                redirect(url:session.referer)
            }
            else {
                redirect(action:list)
            }
        }
        else {
            //render(view:'create',model:[performanceInstance:performanceInstance])
            flash.performanceInstance = performanceInstance
            log.info "save - updated - $flash"
            redirect(action:create)
        }
    }

    def ajaxSearch = {
        log.info "ajaxSearch - " + params
        def jsonList = []
        Performance.list().sort().each {
            if (!params.term || it.toString().toLowerCase().contains(params.term.toLowerCase())) {
                jsonList.add([ id: it.id, value: it.toString() ])
            }
        }
        render jsonList as JSON
    }

    def ajaxSave = {
        log.info "ajaxSave - $params"
        def performanceInstance = new Performance(params)
        boolean status = performanceInstance.save(flush: true);
        log.info "id: ${performanceInstance.id}, name: ${performanceInstance.toString()}, status: $status"
        if (performanceInstance.hasErrors()) {
            performanceInstance.errors.each {
                log.info it
            }
        }
        def response = [:]
        response.display = performanceInstance.toString()
        response.id = performanceInstance.id
        render response as JSON
    }

    def ajaxCalculateDependents = {
        log.info "ajaxCalculateDependents - $params"
        GrailsDomainClass domainClass = grailsApplication.getArtefact("Domain", "Performance")
        def performanceInstance
        if (params.id) {
            performanceInstance = Performance.get( params.id )
        }
        else {
            performanceInstance = new Performance()
        }
        Scaffolding.setFromParams(domainClass,performanceInstance,params)
        def response = [:]
        
        response.numberSeatsSold = formatNumber2(number:performanceInstance.numberSeatsSold,format:"#")
        
        response.numberSeatsReserved = formatNumber2(number:performanceInstance.numberSeatsReserved,format:"#")
        
        response.numberSeatsSoldAndReserved = formatNumber2(number:performanceInstance.numberSeatsSoldAndReserved,format:"#")
        
        response.totalSales = formatNumber2(number:performanceInstance.totalSales,format:"\$0.00")
        
        response.totalsByPrice = performanceInstance.totalsByPrice
        
        render response as JSON
    }

